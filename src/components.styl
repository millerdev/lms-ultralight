.hover-icon-container
  position: relative
  display: inline-block;
  z-index: 5
  .hover-icon
    transition: .1s ease
    backface-visibility: hidden
  &:hover .hover-icon
    opacity: 0
  &:hover .middle
    opacity: 1
  .middle
    transition: .1s ease;
    opacity: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%)

.ui.button.basic.close-button
  padding: 0.2em
  border: none
  box-shadow: none
  font-size: 1.2em

.ui.button
  .icon.no-repeat
    font-size: 1.5em !important
    margin: -0.5em 0 0 -0.1em !important
    position: relative
    top: 0.1em
  .icons.repeat-one
    width: 1.75em
    height: .8em
    margin-top: 1px
    margin-left: -0.5em
    .icon
      font-size: 1.2em
      line-height: .6em
    .icon.tiny
      font-family: sans-serif
      font-size: .8em
      line-height: 1em
      margin-left: -2px
  .icons.shuffle-album
    width: 1.27em
    height: .6em
    line-height: 0.8em
    .icon
      font-size: 1.5em
      line-height: .4em
    .icon.tiny
      font-size: 0.8em
      line-height: 1em

.tr-corner
  margin: 0 0 1em 1em

.ui.items.media-info > .item
  user-select: text
  > .content > .header
    margin-top: 0.5em

.rc-slider-tooltip
  z-index: 200
