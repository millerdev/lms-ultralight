.playlist
  >.touchlist.ui.list>.item,
  >.touchlist.ui.list.list>.item
    .content.floated.right
      margin-left: 0.5em
    .description.title
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis

  >.ui.dropdown
    position: fixed
    right: 0.7em
    bottom: 0.7em
    &.above-player-bar
      bottom: 4em
    .menu.right
      left: auto
      right: 0
  margin-bottom: 3em  // make room for dropdown menu below playlist

.gap-left
  margin-left: 0.5em

.gap-right
  margin-right: 0.5em
